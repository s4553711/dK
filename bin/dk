#!/bin/bash

function USAGE {
echo "Usage: dk [actions] [options] ...
Actions:
	ps
	list
	run
"
}

if [ "$#" == "0" ]; then
	USAGE
	exit 1
fi

while [ $# -ge 1 ]; do
	case "$1" in
		ps)
			shift
			echo "ps $1"
			;;
		status)
			shift
			echo "list $1"
			;;
		run)
			shift
			echo "dk > pipeline: $1: $#"
			pipeline=$1
			if [ $# -eq 2 ]; then
				shift
				method=$1
			else
				method="flow"
			fi
			shift
			source $(dirname $(readlink -f bin/dk))/../src/${pipeline}.sh
			echo "dK > execute ${pipeline}.sh ,method: $method"
			${method} $@
			;;
	esac
	shift
done
